<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:innerRadius="0dp"
            android:shape="ring"
            android:thickness="110dp"
            android:useLevel="false">
            <size
                android:width="130dp"
                android:height="130dp" />
            <gradient
                android:angle="45"
                android:endColor="#6500BEFF"
                android:centerColor="#00000000"
                android:gradientRadius="300"
                android:startColor="#6500FAB5"
                android:type="linear" />
        </shape>
    </item>
    <item
        android:bottom="10dp"
        android:left="10dp"
        android:right="10dp"
        android:top="10dp">
        <shape android:shape="oval">
            <stroke
                android:width="1dp"
                android:color="#0000ffff" />
        </shape>
    </item>
</layer-list>